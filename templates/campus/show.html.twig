{% extends 'base.html.twig' %}

{% block title %}Campus{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="h1-romain">Campus</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ campus.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ campus.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a class="details-link" style="border-right: black solid 1px;padding-right: 0.5em" href="{{ path('campus_index') }}">Retour à la liste des campus</a>

    <a class="details-link" href="{{ path('campus_edit', {'id': campus.id}) }}">Mettre à jour le campus</a>

    {{ include('campus/_delete_form.html.twig') }}
    </div>
{% endblock %}
