{% extends 'base.html.twig' %}

{% block title %}{{ participant.nom ~" "~ participant.prenom}} | {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="h1-romain">{{participant.prenom}}</h2>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 profile-image">
                     {% if participant.profilePhoto %}
                         <img class="img-utilisateur" src="{{ asset('ProfilePhotos/'~participant.profilePhoto.photoProfileTag) }}" title="Image de profil de "~{{ participant.nom ~" "~ participant.prenom }}">
                {% else %}
                    <img class="img-utilisateur" src="{{ asset('Images/imgProfileDefault.png') }}" title="Image de profil de "~{{ participant.nom ~" "~ participant.prenom }}>
                {% endif %}
            </div>
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 profile-infos">
                <div>
                <p class="info">Nom : </p><p class="info-span">{{ participant.nom }}</p>
                <p class="info">Prènom: </p><p class="info-span">{{ participant.prenom }}</p>
                <p class="info">Adresse email: </p><p class="info-span">{{ participant.email }}</p>
                <p class="info">Numéro de téléphone: </p><p class="info-span">{{ participant.telephone }}</p>
                <p class="info">Campus:  </p><p class="info-span">{{ participant.campus.nom }}</p>
                </div>
            </div>
        </div>
        <div>
            {% if is_granted('ROLE_ADMIN') %}
                <a class=" mt-3 btn btn-dark" href="{{ path('participants_liste') }}">Retour à la liste des participants</a>
                <a class=" mt-3 btn btn-dark" href="{{ path('main_home') }}">Retour à la liste des sorties</a>
            {% else %}
                <a class="details-link mt-3" href="{{ path('main_home') }}">Retour à la liste des sorties</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
