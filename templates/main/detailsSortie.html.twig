{% extends 'base.html.twig' %}

{% block title %}Détail de la sortie | {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="h1-romain">Détails de la sortie {{ sortie.nom }}</h1>
        <div class="row">
            <div class="col-md-6">
                <p class="info">Nom de la sortie : </p><p class="info-span">{{ sortie.nom }}</p>
                <p class="info">Date et heure de la sortie : </p><p class="info-span">{{ sortie.dateHeureDebut | format_datetime('long', 'long', locale='fr') }}</p>
                <p class="info">Date limite d'inscription : </p><p class="info-span">{{ sortie.dateLimiteInscription | format_datetime('long', 'long', locale='fr') }}</p>
                <p class="info">Nombre de places : </p><p class="info-span">{{ sortie.nbInscriptionsMax }}</p>
                <p class="info">Durée : </p><p class="info-span">{{ sortie.duree }} minutes</p>
                <p class="info">Description et infos : </p><p class="info-span">{{ sortie.infosSortie }}</p>

            </div>
            <div class="col-md-6">
                <p class="info">Campus : </p><p class="info-span">{{ sortie.campus.nom }}</p>
                <p class="info">Lieu : </p><p class="info-span">{{ sortie.lieu.nom }}</p>
                <p class="info">Rue : </p><p class="info-span">{{ sortie.lieu.rue }}</p>
                <p class="info">Code postal : </p><p class="info-span">{{ sortie.lieu.ville.codePostal }}</p>
                <p class="info">Latitude : </p><p class="info-span">{{ sortie.lieu.latitude }}</p>
                <p class="info">Longitude : </p><p class="info-span">{{ sortie.lieu.longitude }}</p>
            </div>
        </div>
        <div>
            <table class="table table-dark">
                <thead>
                <tr>
                    <th scope="col">Pseudo</th>
                    <th scope="col">Nom</th>
                </tr>
                </thead>
                <tbody>
                    {% for participant in sortie.participants %}
                        <tr>
                            <td>{{ participant.prenom | first~participant.nom | first }}</td>
                            <td>{{ participant.prenom~" "~participant.nom }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <a class="details-link mt-3" href="{{ path('main_home') }}">Retour à la liste des sorties</a>
        </div>
    </div>
{% endblock %}