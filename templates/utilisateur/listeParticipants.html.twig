{% extends 'base.html.twig' %}

{% block title %}Listes des participants | {{ parent() }}{% endblock %}

{% block body %}
    <h2 class="h1-romain">Liste des participants</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">NOM</th>
                <th scope="col">PRENOM</th>
                <th scope="col">CAMPUS</th>
                <th scope="col">MAIL</th>
                <th scope="col">TELEPHONE</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            {% for participant in participants %}
                {% if participant.id != app.user.id %}
                <tr>
                    <td>{{ participant.nom }}</td>
                    <td>{{ participant.prenom }}</td>
                    <td>{{ participant.campus.nom }}</td>
                    <td>{{ participant.email }}</td>
                    <td>{{ participant.telephone }}</td>
                    <td><a class="details-link" href="{{ path('participants_details', {'id': participant.id}) }}">DÃ©tails</a></td>
                </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
{% endblock %}