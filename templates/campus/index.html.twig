{% extends 'base.html.twig' %}

{% block title %}Campus{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="h1-romain">Campus index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for campus in campuses %}
            <tr>
                <td>{{ campus.id }}</td>
                <td>{{ campus.nom }}</td>
                <td>
                    <a class="details-link" style="border-right: black solid 1px;padding-right: 0.5em"  href="{{ path('campus_show', {'id': campus.id}) }}">Voir</a>
                    <a class="details-link" href="{{ path('campus_edit', {'id': campus.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun campus enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <a class="details-link" href="{{ path('campus_new') }}"><button class="btn-lg btn-dark mt-3">Créer un nouveau campus</button></a>
    </div>
{% endblock %}
