{% extends 'base.html.twig' %}

{% block title %}Lieu index{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="h1-romain">Lieu index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Rue</th>
                <th scope="col">Latitude</th>
                <th scope="col">Longitude</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieu in lieus %}
            <tr>
                <td>{{ lieu.id }}</td>
                <td>{{ lieu.nom }}</td>
                <td>{{ lieu.rue }}</td>
                <td>{{ lieu.latitude }}</td>
                <td>{{ lieu.longitude }}</td>
                <td>
                    <a class="details-link" style="border-right: black solid 1px;padding-right: 0.5em" href="{{ path('lieu_show', {'id': lieu.id}) }}">Voir</a>
                    <a class="details-link" href="{{ path('lieu_edit', {'id': lieu.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune ville enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <a class="details-link " href="{{ path('lieu_new') }}"><button class="btn-lg btn-dark mt-3">Créer un nouveau lieu</button></a>
    </div>
{% endblock %}
